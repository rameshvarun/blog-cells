{
  "name": "blog-cells",
  "version": "0.0.1",
  "description": "A tool for turning blog posts into interactive code notebooks.",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "start": "concurrently --kill-others 'live-server .' 'tsc -w'",
    "build": "rm -rf dist/ && tsc && cp ./src/blog-cells.css ./dist",
    "format": "prettier --write src/*.ts src/*.tsx src/*.css"
  }
}
